@model Biblioteca.Models.ImprumuturiCarti
@{ ViewBag.Title = "Returneaza carte"; }
                <h2>Return a Book</h2>
                @using (Html.BeginForm())
                {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IdImprumut) 
                    @Html.HiddenFor(model => model.IdCarte)
                    @Html.HiddenFor(model => model.DataImprumut) 
                    @Html.HiddenFor(model => model.DataReturnare)
                    @Html.HiddenFor(model => model.IdClient)
                    <div class="form-group">
                        <div class="col-md-10">
                        @string.Format("returnezi {0} cartea care a fost imprumutata de la {1} pana la {2}.", Model.Carti.Titlu, Model.Clienti.Nume, Model.DataImprumut.ToLongDateString())
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Returneaza carte" class="btn btn-default" />
                        </div>
                    </div>
                </div>}
<div>@Html.ActionLink("Back to Book List", "Index", "Carti")</div>
